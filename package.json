{
  "name": "vscode-toon-tools-patricio0312rev",
  "displayName": "TOON Tool Kit",
  "description": "Convert between JSON and TOON with live preview for LLM workflows.",
  "license": "MIT",
  "engines": {
    "vscode": "^1.75.0"
  },
  "categories": [
    "Formatters",
    "Programming Languages"
  ],
  "main": "./out/extension.js",
  "activationEvents": [
    "onLanguage:toon",
    "onCommand:toon.jsonToToon",
    "onCommand:toon.toonToJson",
    "onCommand:toon.jsonToToonFile",
    "onCommand:toon.toonToJsonFile",
    "onCommand:toon.yamlToToon",
    "onCommand:toon.toonToYaml",
    "onCommand:toon.yamlToToonFile",
    "onCommand:toon.toonToYamlFile",
    "onCommand:toon.csvToToonFile",
    "onCommand:toon.toonToCsvFile",
    "onCommand:toon.xmlToToonFile",
    "onCommand:toon.toonToXmlFile",
    "onCommand:toon.minify",
    "onCommand:toon.prettify",
    "onCommand:toon.openPreview",
    "onCommand:toon.openTableViewer",
    "onCommand:toon.analyzeSize",
    "onCommand:toon.validate"
  ],
  "contributes": {
    "languages": [
      {
        "id": "toon",
        "aliases": [
          "TOON",
          "toon"
        ],
        "extensions": [
          ".toon"
        ],
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "toon",
        "scopeName": "source.toon",
        "path": "./syntaxes/toon.tmLanguage.json"
      }
    ],
    "commands": [
      {
        "command": "toon.jsonToToon",
        "title": "TOON: JSON → TOON (replace)"
      },
      {
        "command": "toon.toonToJson",
        "title": "TOON: TOON → JSON (replace)"
      },
      {
        "command": "toon.jsonToToonFile",
        "title": "TOON: JSON → TOON (new file)"
      },
      {
        "command": "toon.toonToJsonFile",
        "title": "TOON: TOON → JSON (new file)"
      },
      {
        "command": "toon.yamlToToon",
        "title": "TOON: YAML → TOON (replace)"
      },
      {
        "command": "toon.toonToYaml",
        "title": "TOON: TOON → YAML (replace)"
      },
      {
        "command": "toon.yamlToToonFile",
        "title": "TOON: YAML → TOON (new file)"
      },
      {
        "command": "toon.toonToYamlFile",
        "title": "TOON: TOON → YAML (new file)"
      },
      {
        "command": "toon.csvToToonFile",
        "title": "TOON: CSV → TOON (new file)"
      },
      {
        "command": "toon.toonToCsvFile",
        "title": "TOON: TOON → CSV (new file)"
      },
      {
        "command": "toon.xmlToToonFile",
        "title": "TOON: XML → TOON (new file)"
      },
      {
        "command": "toon.toonToXmlFile",
        "title": "TOON: TOON → XML (new file)"
      },
      {
        "command": "toon.minify",
        "title": "TOON: Minify"
      },
      {
        "command": "toon.prettify",
        "title": "TOON: Prettify"
      },
      {
        "command": "toon.validate",
        "title": "TOON: Validate Syntax"
      },
      {
        "command": "toon.openPreview",
        "title": "TOON: Open Live Preview"
      },
      {
        "command": "toon.openTableViewer",
        "title": "TOON: Open Table Viewer"
      },
      {
        "command": "toon.analyzeSize",
        "title": "TOON: Analyze Size / Tokens"
      }
    ],
    "menus": {
      "editor/context": [
        {
          "command": "toon.jsonToToon",
          "when": "editorTextFocus && resourceExtname == .json",
          "group": "1_toon@1"
        },
        {
          "command": "toon.toonToJson",
          "when": "editorTextFocus && resourceExtname == .toon",
          "group": "1_toon@2"
        },
        {
          "command": "toon.jsonToToonFile",
          "when": "editorTextFocus && resourceExtname == .json",
          "group": "1_toon@3"
        },
        {
          "command": "toon.toonToJsonFile",
          "when": "editorTextFocus && resourceExtname == .toon",
          "group": "1_toon@4"
        },
        {
          "command": "toon.yamlToToon",
          "when": "editorTextFocus && (resourceExtname == .yaml || resourceExtname == .yml)",
          "group": "1_toon@5"
        },
        {
          "command": "toon.toonToYaml",
          "when": "editorTextFocus && resourceExtname == .toon",
          "group": "1_toon@6"
        },
        {
          "command": "toon.yamlToToonFile",
          "when": "editorTextFocus && (resourceExtname == .yaml || resourceExtname == .yml)",
          "group": "1_toon@7"
        },
        {
          "command": "toon.toonToYamlFile",
          "when": "editorTextFocus && resourceExtname == .toon",
          "group": "1_toon@8"
        },
        {
          "command": "toon.csvToToonFile",
          "when": "editorTextFocus && resourceExtname == .csv",
          "group": "1_toon@9"
        },
        {
          "command": "toon.toonToCsvFile",
          "when": "editorTextFocus && resourceExtname == .toon",
          "group": "1_toon@10"
        },
        {
          "command": "toon.xmlToToonFile",
          "when": "editorTextFocus && resourceExtname == .xml",
          "group": "1_toon@11"
        },
        {
          "command": "toon.toonToXmlFile",
          "when": "editorTextFocus && resourceExtname == .toon",
          "group": "1_toon@12"
        },
        {
          "command": "toon.minify",
          "when": "editorTextFocus && resourceExtname == .toon",
          "group": "1_toon@13"
        },
        {
          "command": "toon.prettify",
          "when": "editorTextFocus && resourceExtname == .toon",
          "group": "1_toon@14"
        },
        {
          "command": "toon.validate",
          "when": "editorTextFocus && resourceExtname == .toon",
          "group": "1_toon@15"
        },
        {
          "command": "toon.openPreview",
          "when": "editorTextFocus",
          "group": "2_toon@1"
        },
        {
          "command": "toon.openTableViewer",
          "when": "editorTextFocus",
          "group": "2_toon@2"
        },
        {
          "command": "toon.analyzeSize",
          "when": "editorTextFocus",
          "group": "2_toon@3"
        }
      ]
    }
  },
  "publisher": "patricio0312rev",
  "version": "0.4.0",
  "icon": "icon.png",
  "scripts": {
    "compile": "node esbuild.js",
    "watch": "node esbuild.js --watch",
    "vscode:prepublish": "node esbuild.js --production",
    "package": "vsce package --no-dependencies",
    "publish:vscode": "vsce publish --no-dependencies",
    "publish:ovsx": "ovsx publish --no-dependencies",
    "publish:all": "npm run publish:vscode && npm run publish:ovsx"
  },
  "keywords": [
    "toon",
    "json",
    "llm",
    "workflow",
    "formatter"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/patricio0312rev/vscode-toon-tools"
  },
  "author": "Juan Patricio Marroquin Gavelan",
  "packageManager": "pnpm@10.11.0",
  "dependencies": {
    "@toon-format/spec": "^2.0.0",
    "@toon-format/toon": "^1.0.0",
    "fast-xml-parser": "^5.3.2",
    "js-yaml": "^4.1.1",
    "papaparse": "^5.5.3"
  },
  "devDependencies": {
    "@types/js-yaml": "^4.0.9",
    "@types/node": "^24.10.1",
    "@types/papaparse": "^5.5.0",
    "@types/vscode": "^1.75.0",
    "@vscode/test-electron": "^2.5.2",
    "@vscode/vsce": "^3.7.0",
    "esbuild": "^0.27.0",
    "ovsx": "^0.9.5",
    "typescript": "^5.9.3"
  }
}
